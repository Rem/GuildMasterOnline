    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav>
        <%if logged_in?%>
          <a href="/users/<%=current_user.slug%>">Home<a>
          <a href="/characters">All Characters  <a>
          <a href="/characters/new"> Create Character </a>
          <a href="/logout"> Log out   </a>
        <%else%>
          <a href="/">Home<a>
          <a href="/login"> Login   </a>
          <a href="/signup"> Sign up   </a>
        <%end%>
    </nav>

    <div class="wrapper">
      <% if flash[:message] %>
        <h3 style="color:green;"><%= flash[:message] %></h3>
      <% end %>

      <% if flash[:error] %>
        <h3 style="color:red;"><%= flash[:error] %></h3>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>GuildMasterOnline</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
